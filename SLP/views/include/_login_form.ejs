<!-- login form -->
<form method="POST" id="user_login" onsubmit="return false;">
    <div class="user_login">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="text" name="name" value="" placeholder="Enter username">
        </div>
        <div class="form-group">
            <label for="password" class="text-light">Password</label>
            <input type="password" name="password" value="" placeholder="Enter password">   
            <div class="forgot-password"><a href="#" onclick="return false;">Forgot password</a></div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark"><b style="color: #fff;">Login</b></button>
        </div>
    </div>
</form>
<!-- /login form --> 